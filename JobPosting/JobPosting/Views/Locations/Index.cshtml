@model IEnumerable<JobPosting.Models.Location>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Select By Address:  @Html.TextBox("SearchString", null, new { @class = "form-control" }) <br>
        <input type="submit" value="Filter" class="btn btn-default" />
        @Html.ActionLink("Clear", "Index")
    </p>



<table class="table">
    <tr>
        <th>
            <input type="submit" name="actionButton" value="Address" class="btn btn-link" />
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}
    <input type="hidden" name="sortDirection" value="@ViewBag.sortDirection" />
    <input type="hidden" name="sortField" value="@ViewBag.sortField" />
</table>
}