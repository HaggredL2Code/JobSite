@model JobPosting.Models.Posting

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Posting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Position.PositionCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.PositionCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstNumPosition)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pstNumPosition)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstFTE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pstFTE)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstSalary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pstSalary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstJobDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pstJobDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstCompensationType)
        </dt>

        <dd>
            @if (Model.pstCompensationType == 1)
        {
            @: Hourly
    }
    else if (Model.pstCompensationType == 2)
    {
        @:Monthly
}
else if (Model.pstCompensationType == 3)
{
    @:Yearly
}
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @{
            IEnumerable<JobPosting.Models.JobLocation> jobLocations = ViewBag.JobLocations;
            foreach (var l in jobLocations)
            {
                @: @Html.DisplayFor(lModel => l.Location.Address) <br />
        }
            }
        </dd>

        <dt>
            Day of Work
        </dt>

        <dd>
            @foreach (var d in Model.Days)
        {
            @: @Html.DisplayFor(dModel => d.dayName) <br />
    }
        </dd>


        <dt>
            Requirements
        </dt>

        <dd>
            @{
            IEnumerable<JobPosting.Models.JobRequirement> jobRequirements = ViewBag.JobRequirements;
            foreach (var r in jobRequirements)
            {
                @: @Html.DisplayFor(rModel => r.Qualification.QlfDescription) <br />
        }
            }
        </dd>

        <dt>
            Skills
        </dt>

        <dd>
            @{
            IEnumerable<JobPosting.Models.PostingSkill> postingSkills = ViewBag.PostingSkills;
            foreach (var s in postingSkills)
            {
                @: @Html.DisplayFor(sModel => s.Skill.SkillDescription) <br />
        }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstOpenDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pstOpenDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstEndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pstEndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstJobStartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.pstJobEndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pstJobEndDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.pstJobEndDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
