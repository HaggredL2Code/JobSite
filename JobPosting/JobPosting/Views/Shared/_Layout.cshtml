<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>


    <nav class="navbar navbar-dark bg-dark navbar-expand-lg fixed-top">

        <div class="navbar-header">
            @Html.ActionLink("NC School Board Job Site", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>

        </button>
        <div class="navbar-collapse collapse">

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class= "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                @if (!User.IsInRole("User"))
            {
                <li class="nav-item">@Html.ActionLink("Job Type", "Index", "JobGroups", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Location", "Index", "Locations", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Qualification", "Index", "Qualifications", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Position", "Index", "Positions", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Application", "Index", "Applications", null, new { @class = "nav-link" })</li>
                }
                <li class="nav-item">@Html.ActionLink("Job Posting", "Index", "Postings", null, new { @class = "nav-link" })</li>


            </ul>

            @Html.Partial("_LoginPartial")
        </div>

    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
