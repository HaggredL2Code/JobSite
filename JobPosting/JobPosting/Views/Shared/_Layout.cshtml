<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <br />

    <nav class="navbar navbar-dark bg-dark navbar-expand-lg fixed-top">

        <div class="navbar-header">
            @Html.ActionLink("NC School Board Job Site", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>

        </button>
        <div class="navbar-collapse collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mr-auto">
                @*<li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>*@
                <li class="nav-item">@Html.ActionLink("Job Posting", "Index", "Postings", null, new { @class = "nav-link" })</li>
                @if (!User.IsInRole("User"))
                {

                    <li class="nav-item">@Html.ActionLink("Applications", "Index", "Applications", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Archives", "Index", "Archives", null, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Content For Applications
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Job Type", "Index", "JobGroups", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Location", "Index", "Locations", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Qualification", "Index", "Qualifications", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Position", "Index", "Positions", null, new { @class = "dropdown-item" })
                        </div>
                    </li>

                }

            </ul>

            @Html.Partial("_LoginPartial")
        </div>

    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NC School Board Job Site</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/js-cookie/js.cookie-2.2.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".custom-select2").select2();
            if ($.cookie("prev1") == null) {
                $.cookie("prev1", 0)
            }
            if ($.cookie("prev2") == null) {
                $.cookie("prev2", 0)
            }
        });
    </script>
</body>
</html>
